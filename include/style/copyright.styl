$copyright-color-1 ?= #ea0f4a
$copyright-background-color-1 ?= #f9ecec

$copyright-color-2 ?= #ffa940
$copyright-background-color-2 ?= #fff7e6

$copyright-color-3 ?= #52c41a
$copyright-background-color-3 ?= #f6ffed

.copyright
    &.article-title
        padding: 2px 5px
        border-radius: 3px
        &.type-1
            color: $copyright-color-1
            background-color: $copyright-background-color-1
        &.type-2
            color: $copyright-color-2
            background-color: $copyright-background-color-2
         &.type-3
            color: $copyright-color-3
            background-color: $copyright-background-color-3
    &.article-block
        padding: 0.4em 0.8em
        margin-bottom: 1em
        border-radius: 0.3rem
        border-left: 5px solid #ca0c16
        P
            word-wrap: break-word
            word-break: break-all
            overflow: hidden
        &.type-1
            border-left: 5px solid $copyright-color-1
            background-color: $copyright-background-color-1
        &.type-2
            border-left: 5px solid $copyright-color-2
            background-color: $copyright-background-color-2
        &.type-3
            border-left: 5px solid $copyright-color-3
            background-color: $copyright-background-color-3
